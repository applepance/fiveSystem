<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.five.testsys.mapper.GoodMapper">
    <!-- 在select标签中编写查询的SQL语句，设置select标签的id属性为getUser,id属性必须唯一的，不能重复使用
    parameterType属性指名查询时使用的参数类型，resultType属性指明查询返回的结果集类型 -->

	<resultMap id="goodMap" type="cn.five.testsys.entity.Good">
        <id column="gid" property="gid"/>
        <result column="gname" property="gname"/>
        <result column="gnum" property="gnum"/>
        <result column="gstatus" property="gstatus"/>
        <result column="gtype" property="gtype"/>
    </resultMap>
    
    <select id="getGood_allwait" parameterType="String" resultMap="goodMap">
        SELECT gid,gname,gnum,gstatus,gtype FROM goods WHERE gstatus=#{gstatus} ;
    </select>
    
    <select id="getGood_allgtype" parameterType="String" resultMap="goodMap">
        SELECT gid,gname,gnum,gstatus,gtype FROM goods WHERE gtype=#{gtype} ;
    </select>


    <select id="getGood_gname" parameterType="String" resultType="cn.five.testsys.entity.Good">
        SELECT gid,gname,gnum,gstatus,gtype FROM goods WHERE gname=#{gname} and gstatus='waiting';
    </select>
    
    <select id="getGood_gname_use" parameterType="String" resultType="cn.five.testsys.entity.Good">
        SELECT gid,gname,gnum,gstatus,gtype FROM goods WHERE gname=#{gname} and gstatus='in-use';
    </select>
    
    <select id="getGood_gid" parameterType="int" resultType="cn.five.testsys.entity.Good">
        SELECT gid,gname,gnum,gstatus,gtype FROM goods WHERE gid=#{gid} ;
    </select>
    
    <update id="update_gnum" parameterType="cn.five.testsys.entity.Good">
        UPDATE goods SET gnum=#{gnum} WHERE gid=#{gid};
    </update>
    
    <insert id="save" parameterType="cn.five.testsys.entity.Good" useGeneratedKeys="true" keyColumn="gid" keyProperty="gid">
        INSERT INTO goods (  gname,gnum,gstatus,gtype  ) VALUES (  #{gname}, #{gnum} ,#{gstatus} ,#{gtype} );
    </insert>

</mapper>